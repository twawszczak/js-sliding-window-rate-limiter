    "pretest": "eslint . && tsc --noEmit --pretty && tslint -t stylish -p . && markdownlint *.md",
    "test": "npm run test:api",
    "test:api": "tap test/*.js",
    "test:coverage": "npm test -- --coverage"
  },
  "standard": {
    "globals": [
      "And",
      "After",
      "Feature",
      "Given",
      "Scenario",
      "Then",
      "When"
    ]
